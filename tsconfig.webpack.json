{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noEmit": true,
      "noEmitHelpers": true,
      "importHelpers": true,
      "strictNullChecks": false,
      "lib": [
        "ES2022",
        "dom"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "hammerjs",
        "node"
      ]
    },
    "exclude": [
      "node_modules",
      "dist",
      "src/**/*.spec.ts",
      "src/**/*.e2e.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
      "forkChecker": true,
      "useWebpackText": true
    },
    "angularCompilerOptions": {
      "genDir": "./compiled",
      "skipMetadataEmit": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
      "rewriteTsconfig": false
    }
  }
  